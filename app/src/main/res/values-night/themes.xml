<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenVoice" parent="Base.Theme.OpenVoice">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/windowBackgroundColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="toolbarBackground">@color/toolbarBackgroundColor</item>
        <item name="iconTintOnPrimary">@color/white</item>
        <item name="textColorPrimary">@color/white</item>
    </style>
    
    <style name="Theme.Splash.OpenVoice" parent="Theme.OpenVoice">
        <item name="android:windowBackground">@drawable/background_splash_new</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
    <style name="Theme.Splash.OpenVoice.Dark" parent="Theme.OpenVoice">
        <item name="android:windowBackground">@drawable/background_splash_night_new</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>